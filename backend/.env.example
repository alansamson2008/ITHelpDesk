# Backend Configuration for Intranet Deployment
# Copy this file to .env and update the values for your environment

# MongoDB Configuration - Update to your internal MongoDB server
MONGO_URL="mongodb://your-internal-mongodb:27017"
DB_NAME="it_ticketing_system"

# CORS Configuration - Update to your internal domain
CORS_ORIGINS="http://your-internal-server.com,http://localhost:3000"

# Optional: Monday.com API Configuration (for future integration)
# MONDAY_API_TOKEN="your_monday_api_token"
# MONDAY_BOARD_ID="your_board_id"

# Optional: Authentication Configuration
# LDAP_SERVER="ldap://your-ldap-server.com"
# JWT_SECRET="your-secure-jwt-secret-key"

# Application Configuration
APP_NAME="IT Ticketing System"
COMPANY_NAME="Renewal by Andersen"
DEPARTMENT_NAME="ISC IT Department"